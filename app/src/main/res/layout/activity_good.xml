<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.p2p.dsad.ganhuo.GoodActivity">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/top_good_bar"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            app:popupTheme="@style/PopuMenuThem"
            android:layout_height="wrap_content">
            <at.markushi.ui.ActionView
                android:id="@+id/btn_good_back"
                android:layout_width="30dp"
                app:av_action="back"
                app:av_color="#fff"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_good_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="详情"
                android:textColor="#fff"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/img_good_favorite"
                android:background="@mipmap/ic_favorite_outline_black"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                />
        </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/pro_good_loadview"
                android:layout_alignParentTop="true"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:max="100"
                android:visibility="gone"
                />
            <com.mukesh.MarkdownView
                android:id="@+id/mark_good_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.mukesh.MarkdownView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
